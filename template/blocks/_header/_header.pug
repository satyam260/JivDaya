// header start

header.header.header--front
	.container-fluid
		.row.no-gutters.justify-content-between

			.col-auto.d-flex.align-items-center

				.dropdown-trigger.d-none.d-sm-block
					.dropdown-trigger__item

				.header-logo
					a.header-logo__link(href="index.html")
						img.header-logo__img.logo--light(src="img/jdDynamicLink-white.png", alt="logo")
						img.header-logo__img.logo--dark(src="img/jdDynamicLink-white.png", alt="logo")

			.col-auto

				include ../_main-menu/_main-menu

			.col-auto.d-flex.align-items-center

				// lang select start
				ul.lang-select
					li.lang-select__item.lang-select__item--active
						span En
						//ul.lang-select__sub-list
							li
								a(href="#") French
							li
								a(href="#") Spanish
							li
								a(href="#") Deutsch
							li
								a(href="#") Russian
				// lang select end

				.dropdown-trigger.d-block.d-sm-none
					.dropdown-trigger__item

				a.button.button--squared(href="https://play.google.com/store/apps/details?id=in.co.oxeye.jivdaya")
					span Install JivDaya

// header end