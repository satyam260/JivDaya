extends ../layouts/primary.pug

block variables

	-var page = 'storie-details'

	-var type = 'inner'

	-var dest = 'help'

block header

	include ../blocks/_aside-dropdown/_aside-dropdown

	// header start
	
	header.header.header--inner
		.container-fluid
			.row.no-gutters.justify-content-between

				.col-auto.d-flex.align-items-center
					.dropdown-trigger.dropdown-trigger--inner.d-none.d-sm-block
						.dropdown-trigger__item

					.header-logo
						a.header-logo__link(href="index.html")
							img.header-logo__img(src="img/jdDynamicLink-white.png", alt="logo")

				.col-auto
					include ../blocks/_main-menu/_main-menu

				.col-auto.d-flex.align-items-center

					// lang select start
					ul.lang-select.lang-select--inner
						li.lang-select__item.lang-select__item--active
							span En
							ul.lang-select__sub-list
								li
									a(href="#") French
								li
									a(href="#") Spanish
								li
									a(href="#") Deutsch
								li
									a(href="#") Russian
					// lang select end

					a.button.button--squared(href="https://play.google.com/store/apps/details?id=in.co.oxeye.jivdaya") 
						span Install JivDaya

					.dropdown-trigger.dropdown-trigger--inner.d-block.d-sm-none
						.dropdown-trigger__item

	// header end

block main
	section.promo-primary(class=(dest === "elements" ? "promo-primary--elements" : undefined))

		picture
			source(srcset='img/blog.jpg', media='(min-width: 992px)')
			img.img--bg(src='img/blog.jpg', alt='img')

		.promo-primary__description 
			span Compassion

		.container
			.row
				.col-auto
					.align-container
						.align-container__item
							span.promo-primary__pre-title JivDaya
							h1.promo-primary__title #[span] #[span Privacy Policy]


	
	include ../blocks/_privacy-policy/_privacy

	

	// donors end

	include ../blocks/_bottom-bg/_bottom-bg

block footer

	include ../blocks/_footer/_footer